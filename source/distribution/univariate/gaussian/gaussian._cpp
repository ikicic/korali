#include "distribution/univariate/gaussian/gaussian.hpp"

double korali::distribution::univariate::Gaussian::getDensity(double x)
{
  double y = (x-_mean)/_standardDeviation;
  return gsl_sf_exp(-0.5*y*y) / _normalization;}

double korali::distribution::univariate::Gaussian::getLogDensity(double x)
{
  double d = (x-_mean)/_standardDeviation;
  return _logNormalization - 0.5*d*d;
}

double korali::distribution::univariate::Gaussian::getRandomNumber()
{
  return  _mean + gsl_ran_gaussian(_range, _standardDeviation);
}

void korali::distribution::univariate::Gaussian::updateDistribution()
{
  if (_standardDeviation <= 0.0)  korali::logError("Incorrect Standard Deviation parameter of Gaussian distribution: %f.\n", _standardDeviation);

  _normalization    = M_SQRT2 * M_SQRTPI * _standardDeviation;
  _logNormalization = -0.5*gsl_sf_log(2*M_PI) - gsl_sf_log(_standardDeviation);
}
