#include "distribution/univariate/truncatedGaussian/truncatedGaussian.hpp"
#include "rtnormCpp/src/rtnorm.hpp"

double korali::distribution::univariate::TruncatedGaussian::getDensity(double x)
{
  double d = (x-_mu)/_sigma;
  return gsl_sf_exp(-0.5*d*d) / _normalization;
}

double korali::distribution::univariate::TruncatedGaussian::getLogDensity(double x)
{
  double d = (x-_mu)/_sigma;
  return _logNormalization - 0.5*d*d;
}

double korali::distribution::univariate::TruncatedGaussian::getRandomNumber()
{
  std::pair<double, double> s = rtnorm( _range, _minimum, _maximum, _mu, _sigma );
  return s.first;
}

void korali::distribution::univariate::TruncatedGaussian::updateDistribution()
{
  if (_sigma <= 0.0)  korali::logError("Incorrect Standard Deviation parameter of Truncated Gaussian distribution: %f.\n", _sigma);

  if (_maximum-_minimum <= 0.0)
    _aux = korali::NaN;

  else{
    double a = (_minimum-_mu)/_sigma;
    double b = (_maximum-_mu)/_sigma;

    _normalization    = 0.5 * M_SQRT2 * M_SQRTPI * _sigma * ( gsl_sf_erf(b*M_SQRT1_2) - gsl_sf_erf(a*M_SQRT1_2) ) ;
    _logNormalization = gsl_sf_log(_normalization);
  }
}

